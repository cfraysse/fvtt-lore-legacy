<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'LORE_LEGACY.Property.Skills'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Item'}}'
        data-type='skill'
      >
        <i class='fas fa-plus'></i>
        {{"+" type='skill'}}
      </a>
    </div>
  </li>
  {{#each skills as |skill id|}}
    <li class='item flexrow' data-item-id='{{skill._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item' data-label="{{skill.name}}">
            <img
              src='{{skill.img}}'
              title='{{skill.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{skill.name}}</h4>
      </div>

      <div class='resource'>
        <h4>{{skill.system.skillLevel}}</h4>
      </div>

      <div class="triangle-group">
        <div class="adversitetriangle flexcol">
          <input type="checkbox" id='{{skill.name}}.adversite' disabled="true"
            name="{{skill.name}}.adversite" {{skill.system.cadversite}}>
          <label for="{{skill.name}}.adversite"></label>
          </input>
        </div>
        <div class="fortunetriangle flexcol">
          <input type="checkbox" id='{{skill.name}}.fortune' disabled="true" name="{{skill.name}}.fortune"
            {{skill.system.cfortune}}>
          <label for="{{skill.name}}.fortune"></label>
          </input>
        </div>
      </div>

      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='skill'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='skill'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>